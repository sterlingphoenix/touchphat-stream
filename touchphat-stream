#!/usr/bin/env python3

import os
import signal
import subprocess
import random
from random import shuffle
from sys import exit, version_info
import syslog
import time
import socket
import touchphat

home="/home/pi/touchphat-stream/"
stream_cmd=home+"streamer_helper_script"
video_cmd=home+"video_helper_script"
cleanup_cmd=home+"cleanup_helper_script"
stream_file=home+"streams.dat"

def kill_everything():
    #syslog.syslog(syslog.LOG_NOTICE, "Killing old processes.")
    subprocess.Popen([cleanup_cmd])

def startstream(stream):
    global s
    (url,desc) = stream.split(',')
    msg="Playing stream #"+str(s+1)+": "+desc
    syslog.syslog(syslog.LOG_NOTICE, msg)

    subprocess.Popen([stream_cmd, url])

syslog.syslog(syslog.LOG_NOTICE, "Hi there!")
syslog.syslog(syslog.LOG_NOTICE, "Waiting for network to be available.")

while True:
    nointernet=10
    try:
        socket.gethostbyname("youtube.com")
    except:
        time.sleep(1)
        nointernet=1

    if (nointernet == 10):
        break

with open(stream_file) as s:
    streams=s.readlines()

shuffle(streams)
numstreams=len(streams)

msg=str(numstreams)+" streams detected."
syslog.syslog(syslog.LOG_NOTICE, msg)

s = random.randint(1,numstreams)
s=s-1
startstream(streams[s])

@touchphat.on_release("Enter")
def back_one():
    kill_everything()

    global s
    s=s+1
    if s == numstreams:
        s = 0

    startstream(streams[s])

@touchphat.on_release("Back")
def forward_one():
    kill_everything()

    global s
    s=s-1
    if s == -1:
        s = (numstreams-1)

    startstream(streams[s])

signal.pause()
