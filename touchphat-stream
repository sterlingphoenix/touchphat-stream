#!/usr/bin/env python3

import os
import signal
import subprocess
import random
from sys import exit, version_info
import syslog
import time
import socket
import touchphat


syslog.syslog(syslog.LOG_NOTICE, "Hi there! Waiting for network to be available.")

while True:
    nointernet=10
    try:
        socket.gethostbyname("youtube.com")
    except:
        time.sleep(1)
        nointernet=1

    if (nointernet == 10):
        break

stcmd="/home/pi/stream"
youtube="https://www.youtube.com/watch?v="
streams = {}
with open("/home/pi/streams/streams.dat") as s:
    for line in s:
        (key, val) = line.split(':')
        streams[key]=val

skeys=list(streams.keys());

numstreams=len(skeys)

msg=str(numstreams)+" streams detected."
syslog.syslog(syslog.LOG_NOTICE, msg)

s = random.randint(1,numstreams)
s=s-1
msg="Starting at stream "+str(s)+": "+streams[skeys[s]]
syslog.syslog(syslog.LOG_NOTICE, msg)

cmd=youtube+skeys[s]+"&"
subprocess.Popen([stcmd, cmd])

@touchphat.on_release("Enter")
def back_one():
    global s
    s=s+1
    if s == numstreams:
        s = 0

    msg="Switching to stream "+str(s)+": "+streams[skeys[s]]
    syslog.syslog(syslog.LOG_NOTICE, msg)
    cmd=youtube+skeys[s]
    subprocess.Popen([stcmd, cmd])

@touchphat.on_release("Back")
def forward_one():
    global s
    s=s-1
    if s == -1:
        s = (numstreams-1)

    msg="Switching to stream "+str(s)+": "+streams[skeys[s]]
    syslog.syslog(syslog.LOG_NOTICE, msg)

    cmd=youtube+skeys[s]
    subprocess.Popen([stcmd, cmd])

signal.pause()
